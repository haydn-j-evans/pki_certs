[req]
default_bits = 2048
prompt = no
default_md = sha256
req_extensions = req_ext
distinguished_name = dn

[ dn ]
C=DE
ST=MecklenBurg-Vorpormmern
L=Rostock
O=Centogene AG
OU=IT
emailAddress=servicedesk@centogene.com
CN = {{ ansible_hostname }}.{{ ansible_domain }}

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = {{ ansible_hostname }}.{{ ansible_domain }}
{% if pki_san is defined %}
DNS.2 = {{ pki_san }}.{{ ansible_domain }}
{% endif %}